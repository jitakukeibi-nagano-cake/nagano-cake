<div class="container">
  <div class="row pt-5">
    <div class="col-md-8 ">
      <h3><%= @customers.first_name %><%= @customers.last_name %>様の会員情報編集</h3>
      <%= form_with model: @customers, method: :patch, url: admin_customer_path(@customers) do |f| %>
      <!--更新した情報を詳細ページに送る-->
    <table class="table table-borderless">
      <tbody>
        <tr>
         <td>会員ID</td>
         <td><%= @customers.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :first_name, class: 'form-control' %></td>
          <td><%= f.text_field :last_name, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :first_name_kana, class: 'form-control' %></td>
          <td><%= f.text_field :last_name_kana, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postcode, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "無効" %>&emsp;
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
    </div>
  </div>
</div>