<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h3>注文履歴詳細</h3>
    </div>
    <table class="table table-bordered">
        <tr>
          <th class="table-active" style="width:20%">購入者</th>
          <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:20%">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:20%">配送先</th>
          <td>〒<%= @order.postcode %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-active" style="width:20%">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="table-active" style="width:20%">注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
            <%= f.select :status, Order.statuses_i18n.invert %>
            <%= hidden_field :id, :value => @order.id %>
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
    </table>

      <div class="row">
        <div class="col-sm-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="border border-dark">商品名</th>
              <th class="border border-dark">単価(税込)</th>
              <th class="border border-dark">数量</th>
              <th class="border border-dark">小計</th>
              <th class="border border-dark">製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td class="border border-dark"><%= order_detail.item.name %></td>
              <td class="border border-dark"><%= order_detail.price.to_s(:delimited) %></td>
              <td class="border border-dark"><%= order_detail.quantity %></td>
              <td class="border border-dark"><%= order_detail.subtotal.to_s(:delimited) %></td>
              <td class="border border-dark">
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
      <div class="col-sm-3">
        <table class="table table-borderless">
          <tr>
            <th>商品合計</th>
            <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>請求合計金額</th>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
          </tr>
        </table>
      </div>
  </div>
</div>




