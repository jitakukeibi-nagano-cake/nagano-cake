<div class="container">
  <div class="row">
    <div class="col pt-3">
      <h3>注文履歴詳細</h3>
    </div>
    <table class="table table-borderless" width="300">
        <tr>
          <th class="table-active">購入者</th>
          <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
        </tr>
        <tr>
          <th class="table-active">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td>〒<%= @order.postcode %>
              <%= @order.address %>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-active">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="table-active">注文ステータス</th>
          <td>
            <%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
            <%= f.select :status, Order.statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6" %>
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
    </table>

      <div class="row">
        <div class="col-9">
        <table class="table">
          <thead class="table-active">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody class="tr-color">
            <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
              <td>
                <%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
                <%= f.select :status, Order.statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6" %>
                <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
      <div class="col-3 offset-1 mt-3">
        <table class="table">
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th class="table table-active">送料</th>
            <td><%= @order.postage.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th class="table table-active">請求合計金額</th>
            <td><%= @order.total_payment.to_s(:delimited) %>円</td>
          </tr>
        </table>
      </div>
  </div>
</div>




