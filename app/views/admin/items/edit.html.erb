<!--商品編集画面-->

<div class = "container">
    <div class = "row">
        <div class = "col-sm-8 px-sm-0 offset-sm-1">
            <h4><strong class="table-active">商品編集</strong></h4>
        </div>
    </div>
    
    <div class = "row">
        <div class = "col-sm-10 px-sm-0 mx-auto mb-5">
            <%= form_with model: @item, url:admin_item_path do |f| %>
            <table>
                
                <tr>
                    <div class = "form_group">
                        <th><%= f.label :商品画像 %></th>
                        <td><%= f.file_field :image, accept: "image/*" %></td>
                    </div>
                </tr>
                
                <tr> 
                    <div class = "form_group">
                        <th><%= f.label :商品名 %></th>
                        <td><%= f.text_field :name, class:"form-control", placeholder:"商品名" %></td>
                    </div>
                </tr>
                
                <tr> 
                    <div class = "form_group">
                        <th><%= f.label :商品説明 %></th>
                        <td><%= f.text_field :introduction, class:"form-control", placeholder:"ここに説明文を記述します" %></td>
                    </div>
                </tr>
                
                <tr> 
                    <div class = "form_group">
                        <th><%= f.label :ジャンル %></th>
                        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択して下さい" %></td>
                    </div>
                </tr>
                
                <tr> 
                    <div class = "form_group"></div>
                        <th><%= f.label :税抜価格 %></th>
                        <td>
                            <div class = "input-group">
                            <%= f.text_field :price_without_tax, class:"form-control", placeholder:"1,000" %>
                            <span class = "d-flex align-items-center">円</span>
                            </div>
                        </td>
                </tr>
                
                 <tr> 
                    <div class = "form_group">
                        <th><%= f.label :販売ステータス %></th>
                        <td>
                            <%= f.radio_button :is_active, true, checked: true %>
                            <%= f.label :販売中%>
                            <%= f.radio_button :is_active, false %>
                            <%= f.label :販売停止中%>
                        </td>
                    </div>
                </tr>
                
                 <tr> 
                    <div class = "form_action">
                        <th></th>
                        <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
                    </div>
                </tr>
            </table>
            <% end %>
        </div>
    </div>
</div>