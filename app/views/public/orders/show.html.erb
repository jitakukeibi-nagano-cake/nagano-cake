<div class="container">
  <div class="row"><h2>注文確認画面</h2></div>
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8 px-8">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tr><th class="table-active">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th class="table-active">配送先</th><td><%= "〒#{@order.postcode}" %><br><%= @order.address %><br><%= @order.name %></td></tr>
        <tr><th class="table-active">支払い方法</th><td><%= @order.payment_method %></td></tr>
        <tr><th class="table-active">ステータス</th><td><%= @order.status_i18n %></td></tr>

      </table>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-3 offset-1">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tr><th class="table-active">送料</th><td><%= @order.postage %>円</td></tr>
        <tr><th class="table-active">商品合計</th><td><%= (@order.total_payment - @order.postage) %>円</td></tr>
        <tr><th class="table-active">請求合計</th><td><%= @order.total_payment %>円</td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8 px-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active" style="width:60%">商品</th>
            <th class="table-active" style="width:20%">単価（税込み）</th>
            <th class="table-active" style="width:10%">個数</th>
            <th class="table-active" style="width:10%">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td style="word-break:break-all"><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.quantity * order_detail.price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>