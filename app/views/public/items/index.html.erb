<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h2>商品一覧(全<%= @items.count %>件)</h2>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item|%>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
        <%= link_to item_path(item) do%>
          <p class="img-wrap"><%= attachment_image_tag item, :image, width: "80%", format: "jpeg", fallback: "no_image.jpeg" %></p>
        <% end %>
        <div class="card-body">
          <p class="item-details item-name card-text"><%= item.name %></p>
          <% if item.sales_status == true %>
            <p class="item-details card-text"><%= item.price_excluding_tax %>円(税抜き)</p>
          <% else %>
            <p class="text-danger font-weight-bold card-text">販売停止中</p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @items, class:"text-center" %>
</div>