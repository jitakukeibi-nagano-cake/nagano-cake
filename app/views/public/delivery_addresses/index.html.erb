<div class="container">
  <div class="row">
    <h3>配送先登録/一覧</h3>
      <%= form_with model: @address do |f| %>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode %>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class:"btn btn-lg btn-success" %>
      <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_delivery_address_path(address.id), class:"btn btn-sm btn-success" %>
              <%= link_to "削除する", delivery_address_path(address.id), method: :delete, class:"btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>